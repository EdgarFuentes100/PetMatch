@model List<Publicacion>

@{
    var solicitudes = ViewBag.Solicitudes as List<Solicitud>;
}

<!-- Incluir el modal -->
@Html.Partial("_ModalChat")

<div class="container my-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">Mis publicaciones</h1>
        <a class="btn btn-primary" asp-controller="Publicacion" asp-action="HacerPublicacion">
            + Hacer publicación
        </a>
    </div>    @foreach (var pub in Model)
    {
        <div class="card p-3 mb-4 shadow-sm">
            <div class="row mb-4">
                <!-- Publicación -->
                <div class="col-lg-6 mb-3 mb-lg-0">
                    <div class="card h-100 border-0">
                        <img src="@pub.Mascota.FotoUrl"
                             class="card-img-top"
                             alt="Foto de @pub.Mascota.Nombre"
                             style="height: 220px; object-fit: cover;" />
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@pub.Titulo</h5>
                            <p class="card-text">@pub.Historia</p>
                            <ul class="list-unstyled small mb-3">
                                <li><strong>Mascota:</strong> @pub.Mascota.Nombre</li>
                                <li><strong>Tipo Animal:</strong> @pub.Mascota.TipoMascota.Nombre</li>
                                <li><strong>Edad:</strong> @pub.Mascota.EdadMeses meses</li>
                                <li><strong>Temperamento:</strong> @pub.Mascota.Temperamento</li>
                                <li><strong>Tamaño:</strong> @pub.Mascota.Tamano</li>
                                <li><strong>Sexo:</strong> @(pub.Mascota.Sexo == 'M' ? "Macho" : pub.Mascota.Sexo == 'H' ? "Hembra" : "No especificado")</li>
                            </ul>
                            <div class="d-flex gap-2 flex-wrap">
                                <a href="#" class="btn btn-sm btn-outline-primary">Editar</a>
                                <a href="#" class="btn btn-sm btn-outline-danger">Eliminar</a>
                                <a href="#" class="btn btn-sm btn-outline-info">Detalles</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Solicitudes -->
                <div class="col-lg-6">
                    <div class="card h-100 border-0">
                        <div class="card-body">
                            <h5 class="fw-bold mb-3">Solicitudes de adopción (@solicitudes.Count(s => s.MascotaId == pub.MascotaId))</h5>

                            <div style="max-height: 250px; overflow-y: auto;">
                                <div class="list-group">
                                    @foreach (var solicitud in solicitudes.Where(s => s.MascotaId == pub.MascotaId))
                                    {
                                        <div class="list-group-item">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div>
                                                    <h6 class="mb-1">@solicitud.Solicitante.Nombre</h6>
                                                    <p class="mb-1 small">Tengo experiencia cuidando perros y vivo en casa con patio.</p>
                                                    <small class="text-muted">@solicitud.Solicitante.Email</small>
                                                </div>
                                                <div class="ms-2 text-end">
                                                    <button class="btn btn-success abrir-chat"
                                                            data-nombre="@solicitud.Solicitante.Nombre"
                                                            data-id="@solicitud.Solicitante.UsuarioId"
                                                            type="button">
                                                        <i class="bi bi-envelope"></i> Chatear
                                                    </button>

                                                    <button class="btn btn-sm btn-outline-secondary" title="Aceptar solicitud">
                                                        <i class="bi bi-check-circle"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    @if (!solicitudes.Any(s => s.MascotaId == pub.MascotaId))
                                    {
                                        <p class="text-muted">No hay solicitudes para esta publicación.</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
}