@model IEnumerable<Solicitud>

<h5 class="fw-semibold">
    <i class="bi bi-envelope me-2"></i>
    Solicitudes pendientes (@Model.Count())
</h5>

@if (!Model.Any())
{
    <div class="alert alert-light mb-0">
        <i class="bi bi-info-circle me-2"></i>
        No hay solicitudes pendientes para esta mascota.
    </div>
}
else
{
    <div class="list-group list-group-flush">
        @foreach (var solicitud in Model)
        {
            <div class="list-group-item px-0">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-0">@solicitud.Solicitante.Nombre</h6>
                        <small class="text-muted">@solicitud.Solicitante.Email</small>
                    </div>
                    <div class="btn-group">
                        <button class="btn btn-sm btn-outline-primary abrir-chat"
                                data-nombre="@solicitud.Solicitante.Nombre"
                                data-id="@solicitud.Solicitante.UsuarioId">
                            <i class="bi bi-chat"></i> Chat
                        </button>
                        <button class="btn btn-sm btn-success aceptar-solicitud"
                                data-id="@solicitud.SolicitudId"
                                data-mascota="@solicitud.MascotaId">
                            <i class="bi bi-check-lg"></i> Aceptar
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
}
