@{
    ViewData["Title"] = "Hacer Match";
}

<h2>Hacer Match</h2>

<form asp-action="HacerMatch" method="post">
    <textarea name="descripcion" rows="6" cols="70"></textarea>
    <br />
    <button type="submit" class="btn btn-primary mt-2">Enviar</button>
</form>

<!-- Mensajes de validación -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="text-danger mt-2">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<!-- Sección de resultados: solo aparece si existe ViewBag.Respuesta -->
@if (ViewBag.Respuesta != null)
{
    <hr />
    <h2>Respuesta</h2>
    <div style="white-space: pre-wrap; border:1px solid #ccc; padding:10px;">
        @ViewBag.Respuesta
    </div>
    <a asp-action="HacerMatch" class="btn btn-secondary mt-3">Volver</a>
}
